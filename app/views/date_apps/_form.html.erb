      <ul>
      <% date_app.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, value: @date_app.name ? @date_app.name : "", placeholder: "Please enter your name" %>
  </div>

  <div class="field">
    <%= f.label :sex %>
    <%= f.text_field :sex, value: @date_app.sex ? @date_app.sex : "", placeholder: "Please enter your sex" %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age, value: @date_app.age ? @date_app.age : "", placeholder: "Please enter your age" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, value: @date_app.email ? @date_app.email : "", placeholder: "Please enter your email" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
